<import src="../../wxParse/wxParse"></import>
<view class="acvtivity-info" wx:if="{{showAct}}">
    <view bindtap="close" catchtouchmove="nothing" class="mask"></view>
    <view class="rule-ctx">
        <view class="card">
            <view class="text-ctx">
                <view class="ctx-html">
                    <template is="wxParse" data="{{wxParseData:actHtml.nodes}}"></template>
                </view>
            </view>
            <view bindtap="go" class="go-btn"></view>
            <image class="rule-img" src="../../assets/images/act-bg.png"></image>
            <image bindtap="close" class="close" src="../../assets/images/close.png"></image>
        </view>
    </view>
</view>
