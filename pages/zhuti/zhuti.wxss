.zhuti-list {
    margin: 65rpx auto;
    padding-bottom: 50rpx;
    width: 690rpx;
}

.zhuti-list .zhuti-list-item {
    background-color: #ccc;
    background-position: 50%;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    border-radius: 20rpx;
    height: 185rpx;
    margin-bottom: 46rpx;
    overflow: hidden;
    width: 100%;
}

.zhuti-list .zhuti-list-item.dxjy,.zhuti-list .zhuti-list-item.hsyx {
    background-image: url("https://file.hiyun.site/pxg-file/houjie/xcx/zhendi-bg-hsyx.png");
    box-shadow: 0 10px 17px 0 rgba(255,51,51,.48);
}

.zhuti-list .zhuti-list-item.dxjy .award,.zhuti-list .zhuti-list-item.hsyx .award {
    color: #ed3b3b;
}

.zhuti-list .zhuti-list-item.xczx {
    background-image: url("https://file.hiyun.site/pxg-file/houjie/xcx/zhendi-bg-xczx.png");
    box-shadow: 0 10px 17px 0 rgba(51,255,156,.48);
}

.zhuti-list .zhuti-list-item.xczx .award {
    color: #24d493;
}

.zhuti-list .zhuti-list-item.zlfz {
    background-image: url("https://file.hiyun.site/pxg-file/houjie/xcx/zhendi-bg-zlfz.png");
    box-shadow: 0 10px 17px 0 rgba(51,194,255,.48);
}

.zhuti-list .zhuti-list-item.zlfz .award {
    color: #2495e0;
}

.zhuti-list .zhuti-list-item.whhm {
    background-image: url("https://file.hiyun.site/pxg-file/houjie/xcx/zhendi-bg-whhm.png");
    box-shadow: 0 10px 17px 0 rgba(255,160,51,.48);
}

.zhuti-list .zhuti-list-item.whhm .award {
    color: #e08524;
}

.zhuti-list .zhuti-list-item .ctx {
    align-items: center;
    display: flex;
    flex-wrap: nowrap;
    height: 100%;
    overflow: hidden;
    position: relative;
    width: 100%;
}

.zhuti-list .zhuti-list-item .award {
    background: hsla(0,0%,100%,.8);
    border-radius: 20rpx 0 0 20rpx;
    font-size: 28rpx;
    height: 49rpx;
    line-height: 49rpx;
    position: absolute;
    right: 0;
    text-align: center;
    top: 0;
    width: 141rpx;
}

.zhuti-list .zhuti-list-item .left {
    border-radius: 100%;
    box-sizing: border-box;
    height: 100rpx;
    margin-left: 40rpx;
    width: 100rpx;
}

.zhuti-list .zhuti-list-item .left .icon {
    height: 100rpx;
    width: 100rpx;
}

.zhuti-list .zhuti-list-item .right {
    align-items: center;
    color: #fff;
    display: flex;
    flex-wrap: wrap;
    margin-left: 27rpx;
}

.zhuti-list .zhuti-list-item .right .name {
    font-size: 38rpx;
    font-weight: 500;
    margin-bottom: 26rpx;
    width: 100%;
}

.zhuti-list .zhuti-list-item .right .progress-wrap {
    align-items: center;
    display: flex;
}

.zhuti-list .zhuti-list-item .right .star-wrap {
    height: 35rpx;
}

.zhuti-list .zhuti-list-item .right .star {
    height: 35rpx;
    margin-right: 10rpx;
    width: 35rpx;
}

.zhuti-list .zhuti-list-item .right .progress-text {
    font-size: 36rpx;
    line-height: 36rpx;
    margin-left: 23rpx;
}

.zhuti-list .zhuti-list-item .right .progress-text.done {
    color: #fae664;
}