page {
    background-color: #f6f6f6;
}

.card {
    background-color: #fff;
    border-radius: 12rpx;
    box-sizing: border-box;
    height: 1101rpx;
    margin: 80rpx auto 0;
    padding: 39rpx;
    width: 686rpx;
}

.card .index {
    height: 117rpx;
    margin-bottom: 31rpx;
    width: 100%;
}

.card .index .left {
    color: #ff5733;
    font-size: 100rpx;
    font-weight: 700;
    vertical-align: sub;
}

.card .index .right {
    color: #000;
    font-size: 70rpx;
    font-weight: 700;
}

.card .title {
    font-size: 40rpx;
    font-weight: 700;
    text-align: justify;
    word-break: break-all;
}

.card .option-item {
    align-items: center;
    background-color: #f8f8f8;
    border-radius: 18rpx;
    box-sizing: border-box;
    display: flex;
    font-size: 32rpx;
    line-height: 53rpx;
    margin-top: 32rpx;
    min-height: 102rpx;
    padding: 20rpx 34rpx;
    vertical-align: middle;
    width: 601rpx;
}

.card .option-item .left {
    margin-right: 20rpx;
    word-break: keep-all;
}

.card .option-item .right {
    margin-left: 20rpx;
    width: 464rpx;
}

.card .option-item.correct,.card .option-item.error {
    background-color: #f8f8f8;
    color: #000;
}

.answer .card .option-item.selected {
    background: #4da0ff;
    color: #fff;
}

.result .card .option-item.correct {
    background: #43cf7c;
    color: #fff;
}

.result .card .option-item.error {
    background: #ff6961;
    color: #fff;
}

.btn-area {
    display: flex;
    justify-content: space-around;
    margin: 20rpx auto 0;
    width: 621rpx;
}

.btn-area .next-btn,.btn-area .prev-btn {
    width: 268rpx;
}