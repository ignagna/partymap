page {
    background-color: #fff;
}

.canvasMain {
    align-content: center;
    align-items: center;
    background-color: rgba(0,0,0,.6);
    display: flex;
    flex-direction: column;
    height: 100%;
    justify-content: center;
    left: 0;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 9999;
}

.canvasMain canvas {
    margin-bottom: 40px;
}

.canvas2d {
    border: 2rpx solid #000;
    color: #000;
    font-size: 28rpx;
    margin: 0 auto;
    width: 300rpx;
}

.canvas2d,.canvasMain .button {
    align-items: center;
    display: flex;
    height: 80rpx;
    justify-content: center;
}

.canvasMain .button {
    background-color: rgba(0,0,0,.3);
    border-radius: 40px;
    color: #fff;
    font-size: 16px;
    line-height: 80rpx;
    width: 600rpx;
}

.canvasMain .x {
    border: 2px solid #fff;
    border-radius: 50%;
    height: 15px;
    margin-top: 10px;
    padding: 10px;
    width: 15px;
}

.firstCanvas {
    opacity: 0;
}